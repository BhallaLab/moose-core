load_file("nrngui.hoc")
load_file("hoc/traubcon.hoc")
load_file("hoc/utility.hoc")

load_file("cells/deepbask_template.hoc")
strdef tstr
PI=3.141592
FARADAY=96485
secondorder=2

celsius=30
v_init = -65

define_shape()

objref cell, stim1, stim2


proc runcell(){ local i, t1, a1, t2, a2 localobj vvec, tvec, f, g, caconc, ikvec
    print "--------------------------------------------------------------"
    print "|    NEURON Simulation of deepbask cell                       |"
    print "--------------------------------------------------------------"
    tstop = $1
    t1 = $2
    printf("Run for: %g ms, stim at: %g\n", tstop, t1)
    t2 = 1e9 a2 = 0
    cell = new deepbask()
    access cell.comp[1]
    f = new File()
    tvec = new Vector()
    vvec = new Vector()
    caconc = new Vector()
    ikvec = new Vector()
    
    tvec.record(&t)
    vvec.record(&cell.comp[cell.presyn_comp].v(0.5))
    caconc.record(&cell.comp[1].cai(0.5))

    stim1 = new IClamp(0.5) 
    stim1.amp = 0.3
    stim1.del = t1
    stim1.dur = 50.0
    run()    
    f.wopen("data/Vm_deepbask.plot")
    for ii = 0, vvec.size() - 1{
    	f.printf("%g %g\n", tvec.x(ii), vvec.x(ii))
    }
    f.close()
    
    f.wopen("data/Ca_deepbask.plot")
    for ii = 0, caconc.size() - 1{
    	f.printf("%g %g\n", tvec.x(ii), caconc.x(ii))
    }
    f.close()
    print "--------------------------------------------------------------"
    print "|    NEURON Simulation of deepaxax cell finished              |"
    print "--------------------------------------------------------------"
}


runcell(200., 50.)
quit()
